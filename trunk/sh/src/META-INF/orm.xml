	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	version="1.0">
	
	<!--
		ENTITY_REF(varchar, integer, varchar, varchar, integer, varchar)
	-->
	<named-native-query name="EntityRef" result-class="com.sporthenon.db.entity.meta.RefItem">  
		<query>select * from "ENTITY_REF"(?, ?, ?, ?, ?, ?)</query>
		<hint name="org.hibernate.callable" value="false" />
	</named-native-query>
	
	<!--
		GET_DRAW(integer, varchar)
	-->
	<named-native-query name="GetDraw" result-class="com.sporthenon.db.function.DrawBean">  
